<div class="bg-primary">
  <div class="container-fluid">
    <div class="row">
      <div class="col-4 d-flex justify-content-start text-light">
        <i class="bi bi-shop"> Cửa hàng</i>
      </div>
      <div class="col-4 d-flex justify-content-center">
        <a class="navbar-brand text-light" href="#"><i class="bi bi-gem"></i>GemStoneStore </a>
      </div>
      <div class="col-4 d-flex justify-content-end text-light">
        <i class="bi bi-cart"> Đơn hàng</i>
      </div>
    </div>
  </div>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01"
        aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link active" href="/">Trang chủ
              <span class="visually-hidden">(current)</span>
            </a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link active dropdown-toggle" data-bs-toggle="dropdown" role="button">Danh sách</a>
            <div class="dropdown-menu">
              <a class="dropdown-item" href="/products">Sản phẩm</a>
              <a class="dropdown-item" href="/services">Dịch vụ</a>
              <a class="dropdown-item" href="#">Nhà cung cấp</a>
            </div>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="#">Giá cả</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link active dropdown-toggle" data-bs-toggle="dropdown" role="button">Tài khoản</a>
            <div class="dropdown-menu">
              <a class="dropdown-item" href="/login">Đăng nhập</a>
              <a class="dropdown-item" href="/login/new">Tạo tài khoản</a>
            </div>
          </li>
        </ul>
        <form class="d-flex">
          <input class="form-control me-sm-2" type="text" placeholder="Tìm kiếm">
          <i class="bi bi-search btn btn-secondary" type="submit"></i>
        </form>
        {{#isUserExist account._id}}
        <li class="nav-item dropdown d-flex md">
          <button class="nav-link active dropdown-toggle bi bi-person-circle" data-bs-toggle="dropdown" role="button"> {{account.username}} </button>
          <div class="dropdown-menu">
            <a class="dropdown-item" href="#">Hồ sơ</a>
            <a class="dropdown-item" href="/login/logout">Đăng xuất</a>
          </div>
        </li>
        {{else}}
        
        {{/isUserExist}}
      </div>
    </div>
  </nav>
</div>